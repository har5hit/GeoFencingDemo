<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/rl_change_password_popup"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:clickable="true"
android:visibility="visible"
android:background="@android:color/white">
<LinearLayout
    android:id="@+id/ll_content_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:visibility="visible"
    android:padding="24dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ef_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the Radius"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@null"
        android:paddingBottom="20dp"
        />

    <android.support.v7.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/sb_meters"
        android:max="495"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_meters"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="Meters: 50"/>

</LinearLayout>

<Button
    android:id="@+id/btn_close"
    android:layout_width="wrap_content"
    android:layout_height="36dp"
    android:minWidth="64dp"
    android:text="Close"
    android:layout_below="@+id/ll_content_container"
    android:layout_alignParentRight="true"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:textSize="16sp"
    android:textStyle="bold"
    android:textColor="@color/colorAccent"
    android:textAllCaps="true"
    android:paddingLeft="@dimen/margin_8"
    android:paddingRight="@dimen/margin_8"
    android:paddingBottom="@dimen/margin_8"
    android:layout_marginBottom="@dimen/margin_8"
    android:layout_marginRight="@dimen/margin_8"

    style="@style/Base.Widget.AppCompat.Button.Borderless"
    />

<Button
    android:layout_width="wrap_content" android:layout_height="36dp"
    android:minWidth="64dp"
    android:text="Start"
    android:id="@+id/btn_toggle"
    android:gravity="center_vertical"
    android:layout_below="@+id/ll_content_container"
    android:layout_toLeftOf="@+id/btn_close"
    android:background="@android:color/white"
    android:textSize="16sp"
    android:textStyle="bold"
    android:textColor="@color/colorAccent"
    android:textAllCaps="true"
    android:paddingLeft="@dimen/margin_8"
    android:paddingRight="@dimen/margin_8"
    android:paddingBottom="@dimen/margin_8"
    android:layout_marginBottom="@dimen/margin_8"
    android:layout_marginRight="@dimen/margin_4"
    style="@style/Base.Widget.AppCompat.Button.Borderless"
    />

</RelativeLayout>


